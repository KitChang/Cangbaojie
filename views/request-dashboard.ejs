<div class="container content">
        <div class="row">
            <div class="col-md-12">
                
                
                <h3>推广请求</h3>
                
                
                <%
                    var request = null;
                    while(requests.length){
                        request = requests.pop();
                        if(request.client){
                            var date = request.createdAt;
                            var date2 = date.toLocaleDateString();
                %>
                <div class="list-group">
                    <li class="list-group-item">
                    <a href="/client/<%=request.client.id%>"><%=request.client.name%></a>-<%=request.city%>
                        
                    
                    <span class="badge"><%=date2%></span>

                </li>
                    <li class="list-group-item">
                    <a class="btn btn-primary" href="/request/updateStatus?status=closed&request=<%=request.id%>">完成</a>
                    <a class="btn btn-primary" href="/request/updateStatus?status=process&request=<%=request.id%>">处理中</a>
                        <span class="badge"><%=req.__(request.status)%></span>
                    </li>
                </div>
                <%
                        }
                    }
                %>
                
               
                <button class="btn btn-default right" onClick="javascript:window.history.back()">取消</button>
                
            </div>
            
        </div>
</div>
<script type="text/javascript" src="/js/dependencies/jquery.min.js"></script>
<script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"></script>

