                                    var categories = [
                                     "餐饮",
                                     "地产",
                                     "金融",
                                     "电商",
                                     "娱乐",
                                     "保险",
                                     "电器",
                                     "快消品",
                                     "电子产品",
                                     "汽车交通",
                                     "日用百货",
                                     "珠宝饰品",
                                     "家具家装",
                                     "健康休闲",
                                     "美容保健",
                                     "服饰纺织",
                                     "母婴用品",
                                     "运动装备",
                                     "宠物",
                                     "健康产品",
                                     "玩具礼品",
                                     "广告传媒",
                                     "软件应用",
