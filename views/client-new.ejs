<div class="container content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel full-width" >
                <ol class="breadcrumb panel-heading-cbj">
                  <li>广告管理</a></li>
                  <li><a href="/client">广告客户商家</a></li>
                  <li class="active">创建</li>
                </ol>
                <div class="panel-body">
                    <form class="form-horizontal" id="form" name="form" action="/client/" method="post">                
                    <div class="form-group">
                    <label class="control-label col-sm-2">广告客户名 <span class="mandatory">*</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="name" id="name" class="form-control full-width">
                    </div>
                    </div>
                    <div class="form-group">
                    <label class="control-label col-sm-2">公司叙述<span class="mandatory">*</span></label>
                    <div class="col-sm-10">
                        <textarea style="height: 100px;" name="companyIntroduction" id="companyIntroduction" class="form-control full-width">
                        </textarea>
                    </div>
                    </div>
                    <div class="form-group">
                    <label class="control-label col-sm-2">联系人 <span class="mandatory">*</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="contactPerson" id="contactPerson" class="form-control full-width">
                    </div>
                    </div>
                    <div class="form-group">
                    <label class="control-label col-sm-2">联系电话 <span class="mandatory">*</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="phone" id="phone" class="form-control full-width">
                    </div>
                    </div>
                    <div class="form-group">
                    <label class="control-label col-sm-2">传真</label>
                    <div class="col-sm-10">
                        <input type="text" name="fax" class="form-control full-width">
                    </div>
                    </div>
                    <div class="form-group">
                    <label class="control-label col-sm-2">邮箱地址 <span class="mandatory">*</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="email" id="email" class="form-control full-width">
                    </div>
                    </div>
                    <div class="form-group">
                    <label class="control-label col-sm-2">联系地址 <span class="mandatory">*</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="address" id="address" class="form-control full-width">
                    </div>
                    </div>
                    </form>
                    <button type="button" class="btn btn-default right" onClick="javascript:window.history.back()" value=""/> 取消 </button>
                    <button type="button" id="submit" class="btn btn-primary right">提交</button>

                </div>
            </div>              
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/dependencies/jquery.min.js"></script>
<script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"></script>
<script>
$(document).ready(function(){
    $("#submit").click(function(){
        var email = $("#email").val();
        var phone = $("#phone").val();
        var filter = /^[-a-z0-9~!$%^&*_=+}{\'?]+(\.[-a-z0-9~!$%^&*_=+}{\'?]+)*@([a-z0-9_][-a-z0-9_]*(\.[-a-z0-9_]+)*\.(aero|arpa|biz|com|coop|edu|gov|info|int|mil|museum|name|net|org|pro|travel|mobi|[a-z][a-z])|([0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}))(:[0-9]{1,5})?$/i;
        var errMsg = [];
        if (!filter.test(email)) {
            errMsg.push("邮箱格式有误");
        }
        if(!/\d{11}/.test(phone)){
            errMsg.push("手机为11位数字");
        }
        if($("#name").val().trim()=="" || $("#companyIntroduction").val().trim()=="" || $("#contactPerson").val().trim()=="" || $("#address").val().trim()==""||phone.trim()==""||email.trim()==""){
            errMsg.push("必添栏位不为空");
        }
        if(errMsg.length > 0){
            alert(errMsg.join('\n'));
            return;
        }
        $("#form").submit();
    })
})
</script>


