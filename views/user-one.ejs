        <div class="container content">
            <div class="row">
                        <div class="panel panel-default full-width" >
                            <ol class="breadcrumb panel-heading">
                              <li><a href='/user'>员工账户</a></li>
                                <li>账户编辑</li>
                            </ol>  
                            <div class="panel-body">
                                <form id="form" name="form" action="/user/<%=req.param('id')%>" method="post">                
                                <div class="form-group">
                                <label>用户名 <span class="mandatory">*</span></label>
                                <input type="text" name="username" class="form-control" disabled value="<%=result.username%>">
                                </div>
                                <div class="form-group">
                                <label>密码</label>
                                <input type="text" name="password" class="form-control" value=""><label>更改密码</label>
                                <input type="checkbox" name="changePassword" value="change">
                                </div>
                                <div class="form-group">
                                <label>角色 <span class="mandatory">*</span></label>
                                <select id="role" name="role" class="form-control">
                                    <option></option>
                                    
                                </select>
                                </div>
                                <input type="button" class="btn btn-primary" value="更新" onClick="javascript:document.form.submit();"/>
                  <input type="button" class="btn btn-default" onClick="javascript:window.history.back()" value="取消"/>  
                                </form>
                            </div>
                        </div>              
                </div>
    </div>
    <script type="text/javascript" src="/js/dependencies/jquery.min.js"></script>
    <script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"></script>
    <script>
        ['admin', 'user'].forEach(function(elem, index){
            var elem_cn;
            if(elem=='admin')
                elem_cn = "管理员";
            if(elem=='user')
                elem_cn = "用户";
            if(elem=="<%=result.role%>")
                $("#role").append("<option selected value='"+elem+"'>"+elem_cn+"</option>");
            else
                $("#role").append("<option value='"+elem+"'>"+elem_cn+"</option>");
        });
    </script>