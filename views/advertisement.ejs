<img class="img-thumbnail" height="140px" width="140px" src="http://res.cloudinary.com/djdts3tqq/image/upload/v<%=image.imageVersion%>/<%=image.imagePublicId%>.<%=image.imageFormat%>">
                            <%
                            }
                            %>
                        </td>
                        <td>
                        <%
                            var clientName = "";
                            if(row.client!=null){
                                clientName = row.client.name;
                            }
                        %>
                        <%=clientName%></td><td><a class="btn btn-warning" onClick="javascript: destroy('<%=row.id%>');">删除</a>
                    <a href="/advertisement/<%=row.id%>/deploy" class="btn btn-default">设备发送</a>
                    </td></tr>
                <%
                }
                %>
                    </tbody>
                </table>
                </form>
                </div>

            </div>
        </div>
       
      </div>
