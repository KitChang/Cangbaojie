        <div class="container content">
            <div class="row">
                <div class="col-md-12">
                        <div class="panel panel-default full-width" >
                            <ol class="breadcrumb panel-heading">
                              <li>广告管理</a></li>
                              <li><a href="/client">广告客户商家</a></li>
                              <li class="active">编辑</li>
                            </ol>
                            <div class="panel-body">
                                <button type="button" class="btn btn-default right" onClick="javascript:window.history.back()" value=""/> 取消 </button>
                            </div>
                            <div class="panel-body">
                                <dl class="dl-horizontal">
                                <dt>余额</dt>
                                <dd>人民币 <%=result.account%> 元</dd>
                                </dl>
                            <button type="button" class="btn btn-primary" onClick="javascript:document.location.href='/client/<%=result.id%>/balance';" value=""/> 充值 </button>
                            </div>
                            <div class="panel-body">
                                <form id="form" name="form" action="/client/<%=req.param('id')%>" method="post">                    
                                <div class="form-group">
                                <label>广告商名 <span class="mandatory">*</span></label>
                                <input type="text" name="name" class="form-control" value="<%=result.name%>">
                                </div>
                                <div class="form-group">
                                <label>公司叙述<span class="mandatory">*</span></label>
                                <textarea name="companyIntroduction" class="form-control"><%=result.companyIntroduction%>
                                </textarea>
                                </div>
                                <div class="form-group">
                                <label>联系人 <span class="mandatory">*</span></label>
                                <input type="text" name="contactPerson" class="form-control" value="<%=result.contactPerson%>">
                                </div>
                                <div class="form-group">
                                <label>移动电话 <span class="mandatory">*</span></label>
                                <input type="text" name="mobilePhone" id="mobilePhone" class="form-control" value="<%=result.mobilePhone%>">
                                </div>
                                <div class="form-group">
                                <label>固定电话 <span class="mandatory">*</span></label>
                                <input type="text" name="phone" class="form-control" value="<%=result.phone%>">
                                </div>
                                <div class="form-group">
                                <label>传真 <span class="mandatory">*</span></label>
                                <input type="text" name="fax" class="form-control" value="<%=result.fax%>">
                                </div>
                                <div class="form-group">
                                <label>邮箱地址 <span class="mandatory">*</span></label>
                                <input type="text" name="email" id="email" class="form-control" value="<%=result.email%>">
                                </div>
                                <div class="form-group">
                                <label>联系地址 <span class="mandatory">*</span></label>
                                <input type="text" name="address" class="form-control" value="<%=result.address%>">
                                </div>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </form>
                            </div>
                        </div>
                                            
                </div>
            </div>
            <footer class="footer">
            <p>&copy; Company 2014</p>
            </footer>
    </div>
    <script type="text/javascript" src="/js/dependencies/jquery.min.js"></script>
    <script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#submit").click(function(){
                var email = $("#email").val();
                var mobilePhone = $("#mobilePhone").val();
                var filter = /^[-a-z0-9~!$%^&*_=+}{\'?]+(\.[-a-z0-9~!$%^&*_=+}{\'?]+)*@([a-z0-9_][-a-z0-9_]*(\.[-a-z0-9_]+)*\.(aero|arpa|biz|com|coop|edu|gov|info|int|mil|museum|name|net|org|pro|travel|mobi|[a-z][a-z])|([0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}))(:[0-9]{1,5})?$/i;
                var errMsg = [];
                if (!filter.test(email)) {
                    errMsg.push("邮箱格式有误");
                }
                if(!/\d{11}/.test(mobilePhone)){
                    errMsg.push("手机为11位数字");
                }
                if(errMsg.length > 0){
                    alert(errMsg.join('\n'));
                    return;
                }
                $("#form").submit();
            })
        })
    
    </script>
