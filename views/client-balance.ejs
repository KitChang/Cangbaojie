                                <form id="form" name="form" action="/client/<%=req.param('id')%>/addToBalance" method="post">             
                                <div class="form-group">
                                <label>充值<span class="mandatory">*</span></label>
                                <input type="text" name="addValue" class="form-control" value="">
                                </div>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </form>
                            </div>
                        </div>
                                            
                </div>
            </div>

    </div>
    <script type="text/javascript" src="/js/dependencies/jquery.min.js"></script>
    <script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#submit").click(function(){
                var email = $("#email").val();
                var mobilePhone = $("#mobilePhone").val();
                var filter = /^[-a-z0-9~!$%^&*_=+}{\'?]+(\.[-a-z0-9~!$%^&*_=+}{\'?]+)*@([a-z0-9_][-a-z0-9_]*(\.[-a-z0-9_]+)*\.(aero|arpa|biz|com|coop|edu|gov|info|int|mil|museum|name|net|org|pro|travel|mobi|[a-z][a-z])|([0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}))(:[0-9]{1,5})?$/i;
                var errMsg = [];
                if (!filter.test(email)) {
                    errMsg.push("邮箱格式有误");
                }
                if(!/\d{11}/.test(mobilePhone)){
                    errMsg.push("手机为11位数字");
                }
                if(errMsg.length > 0){
                    alert(errMsg.join('\n'));
                    return;
                }
                $("#form").submit();
            })
        })
    
    </script>
